{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "babelOptions": {
      "configFile": "./.babelrc"
    }
  },
  "settings": {
    "react": {
      "version": "16.7"
    }
  },
  "plugins": ["react", "jest"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "never"],
    "max-classes-per-file": ["error", 1],
    "no-eval": "error",
    "no-lone-blocks": "error",
    "no-multi-str": "error",
    "no-multi-assign": "error",
    "no-new-func": "error",
    "no-param-reassign": "error"
  }
}
